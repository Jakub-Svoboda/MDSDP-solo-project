layout main:
    vertical:
        form validate: 
            label Username
            field email 
            label Password
            field password 
            button login submit
        button register
controls:
    email:
        validate email
        text "Username"
    password:
        validate password
        text "Password"
    login:
        size large
        text "Login"
        require email && password
    register:
        size small
        text "Register"
